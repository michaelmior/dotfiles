[".iterm2_shell_integration.zsh"]
    type = "file"
    url = "https://iterm2.com/shell_integration/zsh"
    refreshPeriod = "168h"

[".config/nvim"]
    type = "git-repo"
    url = "git@github.com:michaelmior/nvimrc.git"
    refreshPeriod = "1h"

{{ if (and (eq .chezmoi.os "darwin") (eq .chezmoi.arch "arm64")) -}}
["bin/mise"]
    type = "file"
    url = "https://github.com/jdx/mise/releases/download/v2025.10.0/mise-v{{ now | date "2006.01" }}.0-macos-arm64"
    executable = true
    refreshPeriod = "168h"
{{- end -}}

{{ if (and (eq .chezmoi.os "linux") (eq .chezmoi.arch "x64")) -}}
["bin/mise"]
    type = "file"
    url = "https://github.com/jdx/mise/releases/download/v2025.10.0/mise-v{{ now | date "2006.01" }}.0-linux-x64"
    executable = true
    refreshPeriod = "168h"
{{- end -}}
