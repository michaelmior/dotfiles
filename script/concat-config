#!/usr/bin/env zsh

# shortcut to this dotfiles path is $ZSH
export DOTFILES_ROOT=$HOME/.dotfiles

# all of our zsh files
typeset -U config_files
setopt extendedglob
config_files=($DOTFILES_ROOT/^zsh/*.zsh)

rm -f $DOTFILES_ROOT/init.zsh
echo -e "# THIS FILE IS AUTOGENERATED\n" >> $DOTFILES_ROOT/init.zsh

# load the path files
for file in ${(M)config_files:#*/path.zsh}
do
    cat $file >> $DOTFILES_ROOT/init.zsh
    echo >> $DOTFILES_ROOT/init.zsh
done

# load everything but the path and completion files
for file in ${${${config_files:#*/path.zsh}:#*/completion.zsh}:#*/install.zsh}
do
    cat $file >> $DOTFILES_ROOT/init.zsh
    echo >> $DOTFILES_ROOT/init.zsh
done

# load every completion after autocomplete loads
for file in ${(M)config_files:#*/completion.zsh}
do
    cat $file >> $DOTFILES_ROOT/init.zsh
    echo >> $DOTFILES_ROOT/init.zsh
done

# Add colors
colors=$(python $DOTFILES_ROOT/system/even-better-ls/ls_colors_generator.py)

echo "LS_COLORS='$colors'" >> $DOTFILES_ROOT/init.zsh

unset config_files
